{
  "manifest_version": 3,
  "name": "Y2W - YouTube to Watch2Gether",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "Quickly send YouTube videos to your Watch2Gether room",
  "author": "Federico Gonz√°lez",
  "short_name": "Y2W",
  "homepage_url": "https://github.com/fedevgonzalez/youtube-to-w2g",
  "offline_enabled": false,
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://w2g.tv/*",
    "https://api.w2g.tv/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/content.js"],
      "css": ["css/style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/y2w.svg"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}